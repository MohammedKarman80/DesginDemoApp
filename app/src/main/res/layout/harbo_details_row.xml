<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="10dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    android:id="@+id/row_logo"
                    android:src="@drawable/logo3"/>
<!--
-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tori-gami"
                    android:layout_toRightOf="@+id/row_logo"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:id="@+id/harbo_row_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/harbo_row_title"
                    android:layout_toRightOf="@+id/row_logo"
                    android:layout_marginTop="15dp"
                    android:text="version :"
                    android:id="@+id/harbo_row_version"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/harbo_row_version"
                    android:layout_toRightOf="@+id/row_logo"
                    android:layout_marginTop="5dp"
                    android:text="Last Update:"
                    android:id="@+id/harbo_row_last_update"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/harbo_row_title"
                   android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:text="12.2233.VDF_BB.0"
                    android:layout_alignParentEnd="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/harbo_row_version"
                   android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="3 months ago"
                    />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>