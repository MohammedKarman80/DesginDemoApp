<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/harbor_card_view_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentStart="true"
                      android:layout_marginTop="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginLeft="10dp"
                      android:text="V1.1.22.Vxxc2.332"
                      android:textColor="@android:color/holo_blue_dark"
                      android:textStyle="bold"
                      android:textSize="18dp"
                      android:id="@+id/row_build"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/row_build"
                      android:layout_marginTop="5dp"
                      android:text="Aug,22,2018,02:10 pm"
                      android:layout_marginLeft="10dp"
                      android:id="@+id/row_date"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/row_date"
                      android:layout_marginTop="20dp"
                      android:text="few bugs fixed"
                      android:layout_marginLeft="10dp"
            />

            <Button android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="20dp"
                    android:text="Download"
                    android:background="#e3f2fd"
                    android:textColor="@android:color/holo_blue_dark"

            />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>