<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e3f2fd"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_card_view">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">

            <ImageView android:layout_width="150dp"
                       android:layout_height="200dp"
                       android:src="@drawable/logo3"
                       android:id="@+id/logo_image"
                       android:layout_margin="10dp"/>

            <Button android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo_image"
                    android:text="Download"
                    android:background="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"
                    android:layout_margin="10dp"
                    android:id="@+id/download_btn"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Tori-gram"
                      android:layout_toRightOf="@id/logo_image"
                      android:layout_marginTop="30dp"
                      android:layout_marginLeft="30dp"
                      android:textSize="26dp"
                      android:id="@+id/tori"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/tori"
                      android:layout_marginTop="10dp"
                      android:layout_toRightOf="@+id/logo_image"
                      android:layout_marginLeft="30dp"
                      android:text="Last Update :"
                      android:id="@+id/update_text"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/update_text"
                      android:layout_marginTop="5dp"
                      android:layout_toRightOf="@+id/logo_image"
                      android:layout_marginLeft="30dp"
                      android:text="3 Months Ago"
                      android:textStyle="bold"
                      android:id="@+id/month_text"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/month_text"
                      android:layout_marginTop="20dp"
                      android:layout_toRightOf="@+id/logo_image"
                      android:layout_marginLeft="30dp"
                      android:text="Last Deployer :"
                      android:id="@+id/deployer_text"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/deployer_text"
                      android:layout_marginTop="5dp"
                      android:layout_toRightOf="@+id/logo_image"
                      android:layout_marginLeft="30dp"
                      android:text="Mohammed Karman"
                      android:textStyle="bold"
                      android:id="@+id/dep_name"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/dep_name"
                      android:layout_marginTop="50dp"
                      android:layout_toRightOf="@+id/download_btn"
                      android:layout_marginLeft="30dp"
                      android:text="Version :"
                      android:id="@+id/version_text"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/version_text"
                      android:layout_marginTop="5dp"
                      android:layout_toRightOf="@+id/download_btn"
                      android:layout_marginLeft="30dp"
                      android:text="V.1.2-55VBNF-22.336"
                      android:textStyle="bold"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="10dp"
              android:text="Previous Builds"
              android:textSize="24dp"
              android:textColor="@android:color/holo_blue_dark"
              android:layout_marginBottom="20dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/harbo_recycler_view"/>


</LinearLayout>