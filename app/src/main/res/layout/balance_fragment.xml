<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ligthGray">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/balance_frame"
            android:background="@color/darkGreen">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <ImageView android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:src="@drawable/ic_notifications_white_24dp"
                       android:layout_alignParentEnd="true"
                       android:layout_margin="10dp"
                       android:id="@+id/notification_icon"/>

            <ImageView android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:src="@drawable/ic_email_black_24dp"
                       android:layout_toLeftOf="@+id/notification_icon"
                       android:layout_marginTop="10dp"
                       android:id="@+id/message_icon"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:textColor="@android:color/white"
                      android:textSize="24dp"
                      android:text="Current Balance"
                      android:layout_marginTop="50dp"
                      android:textStyle="bold"
                      android:id="@+id/current_bal_text"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/current_bal_text"
                      android:layout_centerHorizontal="true"
                      android:textSize="32dp"
                      android:textStyle="bold"
                      android:text="$1200.00"
                      android:layout_marginTop="10dp"
                      android:textColor="@color/darkYellow"
            />


        </RelativeLayout>

    </FrameLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_below="@+id/balance_frame"
                  android:id="@+id/balance_linear_layout"
                  android:layout_marginTop="45dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"
                  android:layout_centerHorizontal="true"
                  android:gravity="center">
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/user"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="Profit/Loss"
                          android:textColor="@android:color/black"
                          android:layout_margin="10dp"
                          android:textStyle="bold"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/user"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="Profit/Loss"
                          android:textColor="@android:color/black"
                          android:layout_margin="10dp"
                          android:textStyle="bold"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/user"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="Profit/Loss"
                          android:textColor="@android:color/black"
                          android:layout_margin="10dp"
                          android:textStyle="bold"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Race TimeLine"
              android:textStyle="bold"
              android:textSize="32dp"
              android:textColor="@color/darkGreen"
              android:layout_below="@+id/balance_linear_layout"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="30dp"
              android:id="@+id/race_text"
              android:layout_marginBottom="30dp"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/race_text"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:background="@android:color/white">
        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_marginTop="10dp"
                     android:layout_marginLeft="30dp"
                     android:layout_marginRight="30dp"
                     android:layout_marginBottom="50dp"
                     android:background="@drawable/oval_shape">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
            >
                <FrameLayout android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                android:background="@drawable/green_circle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:id="@+id/circle_frame">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="13:15"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                </FrameLayout>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                android:layout_below="@+id/circle_frame"
                android:layout_centerHorizontal="true"
                android:textColor="@color/darkGreen"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="Southwell"
                android:textStyle="bold"
                android:id="@+id/south_text"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/south_text"
                          android:layout_centerHorizontal="true"
                          android:layout_marginTop="5dp"
                          android:text="sounthbet.co.uk"
                          android:id="@+id/south_"
                android:textColor="@android:color/black"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/south_"
                          android:layout_centerHorizontal="true"
                          android:layout_marginTop="10dp"
                          android:text="Monday,April,13"
                          />

            </RelativeLayout>

        </FrameLayout>


    </FrameLayout>

</RelativeLayout>